{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Version Bump -- build",
            "type": "shell",
            "icon": {"id": "chevron-up", "color": "terminal.ansiGreen"},
            "command": "go",
            "args": [
                "run",
                "./cmd/main.go",
                "bump",
                "build"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Version Bump -- minor",
            "type": "shell",
            "icon": {"id": "fold-up", "color": "terminal.ansiGreen"},
            "command": "go",
            "args": [
                "run",
                "./cmd/main.go",
                "bump",
                "minor"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
    ]
}